{
  "name": "zodimo/dcf",
  "description": "Framework for delimited continuations",
  "type": "library",
  "license": "mit",
  "version": "0.0.1",
  "autoload": {
    "psr-4": {
      "Zodimo\\DCF\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Zodimo\\DCF\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jaco Labuschagne",
      "email": "zodimo@gmail.com"
    }
  ],
  "require": {
    "php": "~7.4|~8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.62"
  },
  "scripts": {
    "test": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpunit"
    ],
    "debug-test": [
      "Composer\\Config::disableProcessTimeout",
      "php -dxdebug.start_with_request=yes ./vendor/bin/phpunit"
    ],
    "cs-fix": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/php-cs-fixer --allow-risky=yes fix "
    ],
    "stan": [
      "Composer\\Config::disableProcessTimeout",
      "php ./vendor/bin/phpstan analyse"
    ],
    "debug-php": [
      "Composer\\Config::disableProcessTimeout",
      "php -dxdebug.start_with_request=yes "
    ]
  }
}
